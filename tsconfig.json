{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": "./",
    "paths": {
      "@Components/*": [
        "src/app/components/*"
      ],
      "@Pages/*": [
        "src/app/pages/*",
        "src/app/pages"
      ],
      "@Assets/*": [
        "src/app/assets/*"
      ],
      "@Utils/*": [
        "src/app/utils/*"
      ],
      "@Styles/*": [
        "src/app/styles/*"
      ]
    }
  },
  "include": [
    "src"
  ]
}
